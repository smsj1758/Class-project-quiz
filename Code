q = int()

screen = turtle.Screen()
screen.bgcolor('pink')

background = turtle.Turtle()
background.hideturtle()
background.penup()
background.shape('square')
background.color('purple')
background.shapesize(35, 70, 20)
background.goto(0, 0)
background.showturtle()

