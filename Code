    text1.goto(-280, 90)
    text1.write('used to keep programs and', font=('calibri', 15))
    text1.goto(-280, 60)
    text1.write('data indefinately to stop', font=('calibri', 15))
    text1.goto(-280, 30)
    text1.write('loss of files when the', font=('calibri', 15))
    text1.goto(-280, 0)
    text1.write('computer is switched off and', font=('calibri', 15))
    text1.goto(-280, -30)
    text1.write('is not being used.', font=('calibri', 15))
