def end():
    text.clear()
    text1.clear()
    text.goto(-300, 50)
    text.write('congrats, you completed the quiz', font=('calibri', 30))
    text.goto(-250, -50)
    text.write('[press space bar to play again]', font=('calibri', 25))
    choice1.hideturtle()
    choice2.hideturtle()
    choice3.hideturtle()
    choice4.hideturtle()
    correct1.hideturtle()
    a1.hideturtle()
    a2.hideturtle()
    a3.hideturtle()
    a4.hideturtle()
    a5.hideturtle()

screen.onkey(q2, '2')
screen.onkey(q3, '3')
screen.onkey(q4, '4')
screen.onkey(q5, '5')
screen.onkey(end, '6')
screen.listen()
