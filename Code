def q1():
    text.clear()
    text.goto(-240, 290)
    text.write('what does primary storage do?', font=('calibri', 30))
    text.goto(-260, 230)
    text.write('[use number key to choose an awnswer]', font=('calibri', 25))
    choice1.showturtle()
    choice2.showturtle()
    choice3.showturtle()
    choice4.showturtle()
    correct1.showturtle()
    a1.showturtle()
    a2.showturtle()
    a3.showturtle()
    a4.showturtle()
    a5.showturtle()
    text1.goto(-610, 120)
