def q3():
    a2.color('lightgreen')
    text.clear()
    text1.clear()
    text.goto(-280, 290)
    text.write('what does ram and rom stand for?', font=('calibri', 30))
    text.goto(-260, 230)
    text.write('[use number key to choose an awnswer]', font=('calibri', 25))
    text1.goto(-610, 120)
    text1.write('1)    ram stands for', font=('calibri', 15))
    text1.goto(-610, 90)
    text1.write('random analyse memory', font=('calibri', 15))
    text1.goto(-610, 60)
    text1.write('and rom stands for ', font=('calibri', 15))
    text1.goto(-610, 30)
    text1.write('random only memory', font=('calibri', 15))
    text1.goto(-610, 0)
    text1.write('they are both crucial', font=('calibri', 15))
    text1.goto(-610, -30)
    text1.write('for a computers', font=('calibri', 15))
    text1.goto(-610, -60)
    text1.write('functionality.', font=('calibri', 15))
    text1.goto(-280, 120)
    text1.write('2)    ram stands for', font=('calibri', 15))
    text1.goto(-280, 90)
    text1.write('random access memory', font=('calibri', 15))
    text1.goto(-280, 60)
    text1.write('and is volitile and rom', font=('calibri', 15))
    text1.goto(-280, 30)
    text1.write('stands for read only', font=('calibri', 15))
    text1.goto(-280, 0)
    text1.write('memory and is read only.', font=('calibri', 15))
    text1.goto(50, 120)
    text1.write('3)    ram stands for', font=('calibri', 15))
    text1.goto(50, 90)
    text1.write('arithmatic and logic', font=('calibri', 15))
    text1.goto(50, 60)
    text1.write('unit and rom stands for', font=('calibri', 15))
    text1.goto(50, 30)
    text1.write('central processing', font=('calibri', 15))
    text1.goto(50, 0)
    text1.write('unit.', font=('calibri', 15))
    text1.goto(390, 120)
    text1.write('4)    neither ram or', font=('calibri', 15))
    text1.goto(390, 90)
    text1.write('rom stand for anything', font=('calibri', 15))
    text1.goto(390, 60)
    text1.write('but they are both non-', font=('calibri', 15))
    text1.goto(390, 30)
    text1.write('volatile and read only.', font=('calibri', 15))
    q = 3

def q4():
    a3.color('lightgreen')
    text.clear()
