    text1.goto(-610, 120)
    text1.write('1)    the four types', font=('calibri', 15))
    text1.goto(-610, 90)
    text1.write('of primary storage are', font=('calibri', 15))
    text1.goto(-610, 60)
    text1.write('read only memory, random', font=('calibri', 15))
    text1.goto(-610, 30)
    text1.write('acess memory, the', font=('calibri', 15))
    text1.goto(-610, 0)
    text1.write('registries and cache memory.', font=('calibri', 15))
    text1.goto(-280, 120)
    text1.write('2)    the four types of', font=('calibri', 15))
    text1.goto(-280, 90)
    text1.write('primary storage make up the', font=('calibri', 15))
    text1.goto(-280, 60)
    text1.write('cpu, they are the control', font=('calibri', 15))
    text1.goto(-280, 30)
    text1.write('unit, the arithmatic', font=('calibri', 15))
    text1.goto(-280, 0)
    text1.write('logic unit, the cache and', font=('calibri', 15))
    text1.goto(-280, -30)
    text1.write('the registries.', font=('calibri', 15))
    text1.goto(50, 120)
    text1.write('3)    the two main', font=('calibri', 15))
    text1.goto(50, 90)
    text1.write('types of primary storage', font=('calibri', 15))
    text1.goto(50, 60)
    text1.write('are rom, which is read', font=('calibri', 15))
    text1.goto(50, 30)
    text1.write('only and ram, which is', font=('calibri', 15))
    text1.goto(50, 0)
    text1.write('volatile.', font=('calibri', 15))
    text1.goto(390, 120)
    text1.write('4)    the main forms', font=('calibri', 15))
    text1.goto(390, 90)
    text1.write('of primary storage are', font=('calibri', 15))
    text1.goto(390, 60)
    text1.write('magnetic storage,', font=('calibri', 15))
    text1.goto(390, 30)
    text1.write('optical storage devices', font=('calibri', 15))
    text1.goto(390, 0)
    text1.write('and solid state', font=('calibri', 15))
    text1.goto(390, -30)
    text1.write('storage devices.', font=('calibri', 15))
    q = 4

def q5():
    a4.color('lightgreen')
    text.clear()
    text1.clear()
    text.goto(-220, 290)
    text.write('what does volatile mean?', font=('calibri', 30))
    text.goto(-260, 230)
    text.write('[use number key to choose an awnswer]', font=('calibri', 25))
    text1.goto(-610, 120)
    text1.write('1)    volatile means', font=('calibri', 15))
    text1.goto(-610, 90)
    text1.write('that memory can only', font=('calibri', 15))
    text1.goto(-610, 60)
    text1.write('be read and not edited', font=('calibri', 15))
    text1.goto(-610, 30)
    text1.write('an example of this is', font=('calibri', 15))
    text1.goto(-610, 0)
    text1.write('rom.', font=('calibri', 15))
    text1.goto(-280, 120)
    text1.write('2)    volatile are a', font=('calibri', 15))
    text1.goto(-280, 90)
    text1.write('type ofcomputer', font=('calibri', 15))
    text1.goto(-280, 60)
    text1.write('memory, used to quickly', font=('calibri', 15))
    text1.goto(-280, 30)
    text1.write('store and transfer', font=('calibri', 15))
    text1.goto(-280, 0)
    text1.write('data and instructions', font=('calibri', 15))
    text1.goto(-280, -30)
    text1.write('that are being used', font=('calibri', 15))
    text1.goto(-280, -60)
    text1.write('by the cpu.', font=('calibri', 15))
    text1.goto(50, 120)
    text1.write('3)    volatile means', font=('calibri', 15))
    text1.goto(50, 90)
    text1.write('that information and', font=('calibri', 15))
    text1.goto(50, 60)
    text1.write('data are stored via', font=('calibri', 15))
    text1.goto(50, 30)
    text1.write('magnetic poles, to', font=('calibri', 15))
    text1.goto(50, 0)
    text1.write('represent the two binary', font=('calibri', 15))
    text1.goto(50, -30)
    text1.write('values (0 and 1).', font=('calibri', 15))
    text1.goto(390, 120)
    text1.write('4)    volatile means', font=('calibri', 15))
    text1.goto(390, 90)
    text1.write('that when the computer', font=('calibri', 15))
    text1.goto(390, 60)
    text1.write('is turned of the', font=('calibri', 15))
    text1.goto(390, 30)
    text1.write('memory is lost for', font=('calibri', 15))
    text1.goto(390, 0)
    text1.write('something, an example of', font=('calibri', 15))
    text1.goto(390, -30)
    text1.write('volatile storage is ram.', font=('calibri', 15))
    q = 5

